            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/row1col1"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:background="@drawable/border_background"/>

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>